<div class="container">
  <div class="card mb-4">
    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
      <h2 class="mb-0">Team: <%= @team.name %></h2>
      <%= link_to teams_path, class: "btn btn-outline-light" do %>
        <i class="fas fa-arrow-left me-1"></i> Back to Teams
      <% end %>
    </div>

    <div class="card-body">
      <div class="row mb-4">
        <div class="col-md-6">
          <h4>Team Information</h4>
          <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8"><%= @team.name %></dd>

            <dt class="col-sm-4">Level</dt>
            <dd class="col-sm-8"><%= @team.level %></dd>

            <dt class="col-sm-4">Classification</dt>
            <dd class="col-sm-8"><%= @team.classification %></dd>
          </dl>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <h4>Team Players</h4>
          <% if @team.users.where(role: 'player').exists? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Positions</th>
                    <th>Age</th>
                    <th>Height</th>
                    <th>Weight</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @team.users.where(role: 'player').each do |player| %>
                    <tr>
                      <td><%= player.name %></td>
                      <td>
                        <% if player.positions.present? %>
                          <small><%= player.positions.join(', ') %></small>
                        <% else %>
                          <span class="text-muted">-</span>
                        <% end %>
                      </td>
                      <td><%= player.age || '-' %></td>
                      <td><%= player.height ? "#{player.height} cm" : '-' %></td>
                      <td><%= player.weight ? "#{player.weight} kg" : '-' %></td>
                      <td>
                        <%= link_to player_path(player), class: "btn btn-sm btn-outline-primary",
                            data: { bs_toggle: "tooltip", bs_placement: "top", bs_title: "View Details" } do %>
                          <i class="fas fa-eye"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="alert alert-info">
              <i class="fas fa-info-circle me-2"></i>No players in this team yet.
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to edit_team_path(@team), class: "btn btn-primary me-2" do %>
          <i class="fas fa-edit me-1"></i> Edit Team
        <% end %>
        <%= button_to team_path(@team), method: :delete,
            class: "btn btn-danger",
            data: { confirm: "Are you sure you want to delete this team?" } do %>
          <i class="fas fa-trash-alt me-1"></i> Delete Team
        <% end %>
      </div>
    </div>
  </div>
</div>
