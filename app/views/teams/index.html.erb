<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Teams</h1>
    <%= link_to 'New Team', new_team_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Level</th>
          <th>Classification</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= team.name %></td>
            <td><%= team.level %></td>
            <td><%= team.classification %></td>
            <td>
              <%= link_to 'View', team, class: 'btn btn-sm btn-info' %>
              <%= link_to 'Edit', edit_team_path(team), class: 'btn btn-sm btn-warning' %>
              <%= link_to 'Delete', team,
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
