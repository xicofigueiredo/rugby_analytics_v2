<%= form_with(model: @team, local: true) do |f| %>
  <div class="card-body">
    <% if @team.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h4>
        <ul>
          <% @team.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row text-white">
      <div class="col-md-4">
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name,
              class: "form-control",
              placeholder: "Enter team name",
              required: true
          %>
          <div class="form-text">Enter the full name of the team</div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="mb-3">
          <%= f.label :level, class: "form-label" %>
          <%= f.select :level,
              [
                ['Senior'],
                ['Challenge'],
                ['U18'],
                ['U16']
              ],
              { include_blank: 'Select team level' },
              {
                class: "form-select",
                required: true
              }
          %>
          <div class="form-text">Select the competitive level of the team</div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="mb-3">
          <%= f.label :classification, class: "form-label" %>
          <%= f.number_field :classification,
              class: "form-control",
              required: true
          %>
          <div class="form-text">Select the division the team plays in</div>
        </div>
      </div>
    </div>

    <!-- New row for team colors and abbreviation -->
    <div class="row text-white mt-3">
      <div class="col-md-4">
        <div class="mb-3">
          <%= f.label :abbreviation, class: "form-label" %>
          <%= f.text_field :abbreviation,
              class: "form-control",
              placeholder: "e.g., RFC",
              required: true
          %>
          <div class="form-text">Enter team abbreviation (2-5 characters)</div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="mb-3">
          <%= f.label :main_color, class: "form-label" %>
          <%= f.color_field :main_color,
              class: "form-control form-control-color",
              required: true
          %>
          <div class="form-text">Select team's main color</div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="mb-3">
          <%= f.label :secondary_color, class: "form-label" %>
          <%= f.color_field :secondary_color,
              class: "form-control form-control-color",
              required: true
          %>
          <div class="form-text">Select team's secondary color</div>
        </div>
      </div>
    </div>

    <div class="mt-4">
      <%= f.submit submit_text, class: "btn btn-primary" %>
      <%= link_to "Cancel", teams_path, class: "btn btn-secondary ms-2" %>
    </div>
  </div>
<% end %>
