<div class="container py-5">
  <div class="card main-card">
    <div class="card-header text-danger d-flex justify-content-between align-items-center" style="background-color: #23263a;">
      <h2 class="mb-0">New Team</h2>
      <%= link_to (request.referer || root_path), class: "btn btn-outline-light" do %>
        <i class="fas fa-arrow-left me-1"></i> Back
      <% end %>
    </div>
    <div class="card-body">
      <%= render 'form', submit_text: 'Create Team' %>
    </div>
  </div>
</div>
