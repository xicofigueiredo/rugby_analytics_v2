<div class="container mt-4">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :role, class: "form-label" %>
      <%= f.select :role,
          [['Player', 'player'], ['Coach', 'coach'], ['Fan', 'fan'], ['Admin', 'admin']],
          { include_blank: 'Select role' },
          { class: "form-select" }
      %>
    </div>

    <div class="mb-3">
      <%= f.label :team_id, "Team", class: "form-label" %>
      <%= f.collection_select :team_id, Team.all, :id, :name,
          { include_blank: 'Select team' },
          { class: "form-select" }
      %>
    </div>

    <!-- Player fields - always visible but only required for players -->
    <div class="mb-3">
      <%= f.label :age, class: "form-label" %>
      <%= f.number_field :age, class: "form-control" %>
      <small class="text-muted">Required for players</small>
    </div>

    <div class="mb-3">
      <%= f.label :positions, class: "form-label" %>
      <div class="position-checkboxes">
        <% User::VALID_POSITIONS.each do |position| %>
          <div class="form-check">
            <%= check_box_tag 'user[positions][]', position, false,
                id: "user_positions_#{position.parameterize}",
                class: "form-check-input"
            %>
            <%= label_tag "user_positions_#{position.parameterize}", position,
                class: "form-check-label"
            %>
          </div>
        <% end %>
      </div>
      <small class="text-muted">Required for players</small>
    </div>

    <div class="mb-3">
      <%= f.label :height, "Height (cm)", class: "form-label" %>
      <%= f.number_field :height, step: 0.01, class: "form-control" %>
      <small class="text-muted">Required for players</small>
    </div>

    <div class="mb-3">
      <%= f.label :weight, "Weight (kg)", class: "form-label" %>
      <%= f.number_field :weight, step: 0.01, class: "form-control" %>
      <small class="text-muted">Required for players</small>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
