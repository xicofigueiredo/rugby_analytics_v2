<!-- Users Section Tabs -->
<div class="py-5">
  <div class="container">
    <br>
    <h4 class="fw-semibold text-white">Who will benefit from our app?</h4>
    <br>

    <!-- Nav Tabs -->
    <ul class="nav nav-tabs justify-content-center mb-4" id="userTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="coach-tab" data-bs-toggle="tab" data-bs-target="#coach" type="button" role="tab" aria-controls="coach" aria-selected="true">
          <i class="fa-solid fa-chalkboard-user me-2"></i>Coaches
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="player-tab" data-bs-toggle="tab" data-bs-target="#player" type="button" role="tab" aria-controls="player" aria-selected="false">
          <i class="fa-solid fa-person-running me-2"></i>Players
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="fans-tab" data-bs-toggle="tab" data-bs-target="#fans" type="button" role="tab" aria-controls="fans" aria-selected="false">
          <i class="fa-solid fa-users me-2"></i>Fans
        </button>
      </li>
    </ul>

    <!-- Tabs Content -->
    <div class="tab-content" id="userTabsContent">

      <!-- Coach Tab -->
      <div class="tab-pane fade show active" id="coach" role="tabpanel" aria-labelledby="coach-tab">
        <div class="row align-items-center g-4">
          <div class="col-lg-6">
            <%= image_tag "coach.jpg", alt: "Coach reviewing data", class: "img-fluid rounded shadow" %>
          </div>
          <div class="col-lg-6">
            <div class="ps-lg-4">
              <div class="card border-0 shadow-sm mb-3">
                <div class="card-body" style="background-color: #23263a;">
                  <h5 class="fw-semibold mb-2 text-white">
                    <i class="fa-solid fa-chart-line text-danger me-2"></i>Performance Insights
                  </h5>
                  <p class="text-white small mb-0">
                    Coaches receive detailed breakdowns of team/player performance, including tackles, carries, errors, and more.
                  </p>
                </div>
              </div>
              <div class="card border-0 shadow-sm">
                <div class="card-body" style="background-color: #23263a;">
                  <h5 class="fw-semibold mb-2 text-white">
                    <i class="fa-solid fa-chess text-danger me-2"></i>Strategic Optimization
                  </h5>
                  <p class="text-white small mb-0">
                    Analyze performance to identify strengths and weaknesses, leading to optimized team strategies.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Player Tab -->
      <div class="tab-pane fade" id="player" role="tabpanel" aria-labelledby="player-tab">
        <div class="row align-items-center g-4">
          <div class="col-lg-6">
            <%= image_tag "player.jpg", alt: "Player reviewing performance", class: "img-fluid rounded shadow" %>
          </div>
          <div class="col-lg-6">
            <div class="pe-lg-4">
              <div class="card border-0 shadow-sm mb-3">
                <div class="card-body" style="background-color: #23263a;">
                  <h5 class="fw-semibold mb-2 text-white">
                    <i class="fa-solid fa-chart-bar text-danger me-2"></i>Personalized Stats
                  </h5>
                  <p class="text-white small mb-0">
                    Players can access their own performance data, providing valuable self-reflection and improvement opportunities.
                  </p>
                </div>
              </div>
              <div class="card border-0 shadow-sm">
                <div class="card-body" style="background-color: #23263a;">
                  <h5 class="fw-semibold mb-2 text-white">
                    <i class="fa-solid fa-heart-pulse text-danger me-2"></i>Injury Monitoring
                  </h5>
                  <p class="text-white small mb-0">
                    Track individual injury risks and recovery progress, empowering players to take ownership of their health.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Fans Tab -->
      <div class="tab-pane fade" id="fans" role="tabpanel" aria-labelledby="fans-tab">
        <div class="row align-items-center g-4">
          <div class="col-lg-6">
            <%= image_tag "fans.jpg", alt: "Fans cheering in stadium", class: "img-fluid rounded shadow" %>
          </div>
          <div class="col-lg-6">
            <div class="ps-lg-4">
              <div class="card border-0 shadow-sm mb-3">
                <div class="card-body" style="background-color: #23263a;">
                  <h5 class="fw-semibold mb-2 text-white">
                    <i class="fa-solid fa-trophy text-danger me-2"></i>Game Stats & Profiles
                  </h5>
                  <p class="text-white small mb-0">
                    Access game stats and player profiles to stay connected with your favorite teams and track player progress.
                  </p>
                </div>
              </div>
              <div class="card border-0 shadow-sm">
                <div class="card-body" style="background-color: #23263a;">
                  <h5 class="fw-semibold mb-2 text-white">
                    <i class="fa-solid fa-gamepad text-danger me-2"></i>Fantasy Rugby
                  </h5>
                  <p class="text-white small mb-0">
                    Build your dream team, earn points from real match performance, and compete for prizes and exclusive experiences.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div> <!-- End of tab-content -->
  </div>
</div>

<style>
  .nav-tabs .nav-link {
    color: white; /* text-white color */
    border: none;
    border-bottom: 2px solid transparent;
  }

  .nav-tabs .nav-link:hover {
    border: none;
    border-bottom: 2px solid lightgrey;
    color: lightgrey;
  }


</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = ['coach', 'player', 'fans'];
    let currentTabIndex = 0;
    let intervalId;

    function rotateTab() {
      const nextTabId = `${tabs[(currentTabIndex + 1) % tabs.length]}-tab`;
      const nextTab = document.getElementById(nextTabId);
      const tabInstance = new bootstrap.Tab(nextTab);
      tabInstance.show();
      currentTabIndex = (currentTabIndex + 1) % tabs.length;
    }

    intervalId = setInterval(rotateTab, 3000);

    // Pause rotation when user manually clicks a tab
    document.querySelectorAll('.nav-link').forEach((tab, idx) => {
      tab.addEventListener('click', () => {
        clearInterval(intervalId);
        currentTabIndex = idx;
      });
    });
  });
</script>
