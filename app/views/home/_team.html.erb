<style>
  .alternating-image {
    position: relative;
    width: 200px;
    height: 200px;
    margin: 0 auto;
  }

  .alternating-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    transition: opacity 0.5s ease-in-out;
    border: 4px solid #2c3e50;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
  }

  .alternating-image img:nth-child(1) {
    animation: fade 6s infinite;
  }

  .alternating-image img:nth-child(2) {
    animation: fade 6s infinite reverse;
  }

  @keyframes fade {
    0%, 45% {
      opacity: 1;
      z-index: 2;
    }
    50%, 95% {
      opacity: 0;
      z-index: 1;
    }
    100% {
      opacity: 1;
      z-index: 2;
    }
  }

  .rugby-position {
    background: #2c3e50;
    color: white;
    padding: 5px 15px;
    border-radius: 20px;
    display: inline-block;
    font-weight: bold;
    margin-top: 10px;
    position: relative;
  }

  .rugby-position::before {
    margin-right: 5px;
  }

  .team-member {
    transition: transform 0.3s ease;
  }

  .team-member:hover {
    transform: scale(1.05);
  }

  .team-title {
    font-family: 'Impact', sans-serif;
    text-transform: uppercase;
    letter-spacing: 2px;
    position: relative;
    display: inline-block;
    color: white;
  }

  .team-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 4px;
    background: rgb(220, 53, 69);
    border-radius: 2px;
  }

  .role {
    font-style: italic;
    color: white;
  }

  h3 {
    color: white;
  }

  p {
    color: white;
  }
</style>

