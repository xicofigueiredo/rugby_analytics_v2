<div class="container">
  <div class="card main-card">
    <div class="card-header text-danger d-flex justify-content-between align-items-center" style="background-color: #23263a;">
      <h2 class="mb-0">Users</h2>
      <%= form_tag admin_users_path,
          method: :get,
          class: "d-flex gap-2",
          data: { controller: "users-filter",
                 turbo_frame: "users-table" } do %>
        <%= select_tag "user[role]",
            options_for_select([['All Roles', ''], ['Admin', 'admin'], ['Coach', 'coach'], ['Player', 'player'], ['Fan', 'fan']], params.dig(:user, :role)),
            class: "form-select form-select-sm",
            data: { action: "change->users-filter#submit" }
        %>
        <%= select_tag "user[team_id]",
            options_from_collection_for_select(Team.all, :id, :name, params.dig(:user, :team_id)),
            prompt: "All Teams",
            class: "form-select form-select-sm",
            data: { action: "change->users-filter#submit" }
        %>
      <% end %>
    </div>

    <%= turbo_frame_tag "users-table" do %>
      <div class="card-body" style="background-color: #23263a;">
        <% if @users.any? %>
          <div class="table-responsive">
            <table class="table table-hover table-dark-custom">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Role</th>
                  <th>Team</th>
                  <th>Player</th>
                  <th>Created At</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="avatar-circle bg-danger text-white me-2">
                          <%= user.name.first.upcase %>
                        </div>
                        <%= user.name %>
                      </div>
                    </td>
                    <td><%= user.email %></td>
                    <td>
                      <span>
                        <%= user.role.titleize %>
                      </span>
                    </td>
                    <td>
                      <% if user.team %>
                        <span class="badge bg-primary">
                          <%= user.team.name %>
                        </span>
                      <% else %>
                        <span class="badge bg-secondary">
                          <i class="fas fa-ban me-1"></i>
                          Not assigned
                        </span>
                      <% end %>
                    </td>
                    <td>
                      <% if user.player %>
                        <span class="badge bg-success">
                          <i class="fas fa-user me-1"></i>
                          <%= user.player.name %>
                        </span>
                      <% elsif user.role == 'player' %>
                        <button type="button"
                                class="btn btn-sm btn-outline-warning"
                                data-bs-toggle="modal"
                                data-bs-target="#linkPlayerModal<%= user.id %>">
                          <i class="fas fa-link me-1"></i>
                          Link Player
                        </button>
                      <% else %>
                        <span class="badge bg-secondary">
                          <i class="fas fa-ban me-1"></i>
                          N/A
                        </span>
                      <% end %>
                    </td>
                    <td>
                      <div class="d-flex align-items-center">
                        <i class="fas fa-calendar me-2 text-muted"></i>
                        <%= user.created_at.strftime("%B %d, %Y") %>
                      </div>
                    </td>
                    <td>
                      <%= link_to "#",
                          class: "btn btn-sm btn-outline-primary",
                          data: {
                            turbo_frame: "_top",
                            bs_toggle: "tooltip",
                            bs_placement: "top",
                            bs_title: "View Details"
                          } do %>
                        <i class="fas fa-eye"></i>
                      <% end %>
                      <%= link_to "#",
                          class: "btn btn-sm btn-outline-secondary ms-1",
                          data: {
                            turbo_frame: "_top",
                            bs_toggle: "tooltip",
                            bs_placement: "top",
                            bs_title: "Edit User"
                          } do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                    </td>
                  </tr>

                  <% if user.role == 'player' && !user.player %>
                    <!-- Link Player Modal -->
                    <div class="modal fade" id="linkPlayerModal<%= user.id %>" tabindex="-1" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content bg-dark text-white">
                          <div class="modal-header">
                            <h5 class="modal-title">Link Player to <%= user.name %></h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <%= form_with(model: user, url: link_player_admin_user_path(user), method: :patch) do |f| %>
                            <div class="modal-body">
                              <div class="mb-3">
                                <%= f.label :player_id, "Select Player", class: "form-label" %>
                                <%= f.collection_select :player_id,
                                    Player.left_outer_joins(:user).where(users: { id: nil }).order(:name),
                                    :id,
                                    :name,
                                    { prompt: "Choose a player" },
                                    { class: "form-select" }
                                %>
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                              <%= f.submit "Link Player", class: "btn btn-primary" %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>No users found.
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
