<div class="container">
  <div class="card main-card">
    <div class="card-header text-danger d-flex justify-content-between align-items-center" style="background-color: #23263a;">
      <h2 class="mb-0">Users</h2>
    </div>
    <div class="card-body" style="background-color: #23263a;">
      <div class="table-responsive">
        <table class="table table-hover table-dark-custom">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Team</th>
              <th>Created At</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role.titleize %></td>
                <td><%= user.team&.name || 'Not assigned' %></td>
                <td><%= user.created_at.strftime("%B %d, %Y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
