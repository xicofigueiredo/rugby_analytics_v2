<div class="container">
  <div class="card main-card">
    <div class="card-header text-danger d-flex justify-content-between align-items-center" style="background-color: #23263a;">
      <h2 class="mb-0">User Details</h2>
      <div>
        <%= link_to edit_admin_user_path(@user), class: "btn btn-outline-secondary me-2" do %>
          <i class="fas fa-edit me-1"></i> Edit User
        <% end %>
        <%= link_to admin_users_path, class: "btn btn-outline-primary" do %>
          <i class="fas fa-arrow-left me-1"></i> Back to Users
        <% end %>
      </div>
    </div>

    <div class="card-body" style="background-color: #23263a;">
      <div class="row">
        <div class="col-md-6">
          <div class="mb-4">
            <h5 class="text-white mb-3">Basic Information</h5>
            <div class="table-responsive">
              <table class="table table-dark-custom">
                <tr>
                  <th style="width: 150px;">Name</th>
                  <td><%= @user.name %></td>
                </tr>
                <tr>
                  <th>Email</th>
                  <td><%= @user.email %></td>
                </tr>
                <tr>
                  <th>Role</th>
                  <td><%= @user.role.titleize %></td>
                </tr>
                <tr>
                  <th>Created At</th>
                  <td><%= @user.created_at.strftime("%B %d, %Y") %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="mb-4">
            <h5 class="text-white mb-3">Team & Player Information</h5>
            <div class="table-responsive">
              <table class="table table-dark-custom">
                <tr>
                  <th style="width: 150px;">Team</th>
                  <td>
                    <% if @user.team %>
                      <span class="badge bg-primary">
                        <%= @user.team.name %>
                      </span>
                    <% else %>
                      <span class="badge bg-secondary">
                        <i class="fas fa-ban me-1"></i>
                        Not assigned
                      </span>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <th>Player</th>
                  <td>
                    <% if @user.player %>
                      <span class="badge bg-success">
                        <i class="fas fa-user me-1"></i>
                        <%= @user.player.name %>
                      </span>
                    <% elsif @user.role == 'player' %>
                      <button type="button"
                              class="btn btn-sm btn-outline-warning"
                              data-bs-toggle="modal"
                              data-bs-target="#linkPlayerModal<%= @user.id %>">
                        <i class="fas fa-link me-1"></i>
                        Link Player
                      </button>
                    <% else %>
                      <span class="badge bg-secondary">
                        <i class="fas fa-ban me-1"></i>
                        N/A
                      </span>
                    <% end %>
                  </td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if @user.role == 'player' && !@user.player %>
    <!-- Link Player Modal -->
    <div class="modal fade" id="linkPlayerModal<%= @user.id %>" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
          <div class="modal-header">
            <h5 class="modal-title">Link Player to <%= @user.name %></h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <%= form_with(model: @user, url: link_player_admin_user_path(@user), method: :patch) do |f| %>
            <div class="modal-body">
              <div class="mb-3">
                <%= f.label :player_id, "Select Player", class: "form-label" %>
                <%= f.collection_select :player_id,
                    Player.left_outer_joins(:user).where(users: { id: nil }).order(:name),
                    :id,
                    :name,
                    { prompt: "Choose a player" },
                    { class: "form-select" }
                %>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <%= f.submit "Link Player", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
