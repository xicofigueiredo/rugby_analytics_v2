<div class="container">
  <div class="card main-card">
    <div class="card-header text-danger d-flex justify-content-between align-items-center" style="background-color: #23263a;">
      <h2 class="mb-0">Edit User</h2>
    </div>
    <div class="card-body" style="background-color: #23263a;">
      <%= form_with(model: [:admin, @user], class: "text-white") do |f| %>
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :role, class: "form-label" %>
          <%= f.select :role,
              [['Admin', 'admin'], ['Coach', 'coach'], ['Player', 'player'], ['Fan', 'fan']],
              {},
              { class: "form-select" }
          %>
        </div>

        <div class="mb-3">
          <%= f.label :team_id, "Team", class: "form-label" %>
          <%= f.collection_select :team_id,
              Team.all.order(:name),
              :id,
              :name,
              { include_blank: 'Select team' },
              { class: "form-select" }
          %>
        </div>

        <% if @user.role == 'player' %>
          <div class="mb-3">
            <%= f.label :player_id, "Linked Player", class: "form-label" %>
            <%= f.collection_select :player_id,
                Player.left_outer_joins(:user).where("users.id IS NULL OR users.id = ?", @user.id).order(:name),
                :id,
                :name,
                { include_blank: 'Select player' },
                { class: "form-select" }
            %>
          </div>
        <% end %>

        <div class="d-flex gap-2">
          <%= f.submit "Update User", class: "btn btn-primary" %>
          <%= link_to "Cancel", admin_users_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .form-control, .form-select {
      background-color: #2d3147;
      border-color: #3a3f55;
      color: #fff;
    }

    .form-control:focus, .form-select:focus {
      background-color: #2d3147;
      border-color: #4a4f65;
      color: #fff;
      box-shadow: 0 0 0 0.25rem rgba(255, 255, 255, 0.1);
    }

    .form-control::placeholder {
      color: #6c757d;
    }

    .form-label {
      color: #fff;
    }
  </style>
<% end %>
