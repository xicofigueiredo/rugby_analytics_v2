<div class="container">
  <div class="card">
    <div class="card-header bg-danger text-white">
      <h2>My Profile</h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <h4>Basic Information</h4>
          <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8"><%= @user.name %></dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8"><%= @user.email %></dd>

            <dt class="col-sm-4">Role</dt>
            <dd class="col-sm-8"><%= @user.role.titleize %></dd>

            <dt class="col-sm-4">Team</dt>
            <dd class="col-sm-8"><%= @user.team&.name || 'Not assigned' %></dd>
          </dl>
        </div>

        <% if @user.player? %>
          <div class="col-md-6">
            <h4>Player Details</h4>
            <dl class="row">
              <dt class="col-sm-4">Age</dt>
              <dd class="col-sm-8"><%= @user.player.age %></dd>

              <dt class="col-sm-4">Height</dt>
              <dd class="col-sm-8"><%= @user.player.height %> cm</dd>

              <dt class="col-sm-4">Weight</dt>
              <dd class="col-sm-8"><%= @user.player.weight %> kg</dd>

              <dt class="col-sm-4">Positions</dt>
              <dd class="col-sm-8">
                <% if @user.player.positions.present? %>
                  <ul class="list-unstyled">
                    <% @user.player.positions.each do |position| %>
                      <li><%= position %></li>
                    <% end %>
                  </ul>
                <% end %>
              </dd>
            </dl>
          </div>
        <% end %>
      </div>

      <div class="mt-3">
        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
