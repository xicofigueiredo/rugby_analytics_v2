<div class="container">
  <div class="card">
    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
      <h2 class="mb-0">Edit Player: <%= @player.name %></h2>
      <%= link_to players_path, class: "btn btn-outline-light" do %>
        <i class="fas fa-arrow-left me-1"></i> Back to Players
      <% end %>
    </div>

    <div class="card-body">
      <%= form_with(model: [:player, @player], url: player_path(@player), method: :patch, local: true) do |f| %>
        <% if @player.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h4>
            <ul>
              <% @player.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :team_id, "Team", class: "form-label" %>
              <%= f.collection_select :team_id, Team.all, :id, :name,
                  { include_blank: 'Select team' },
                  { class: "form-select" }
              %>
            </div>

            <div class="mb-3">
              <%= f.label :age, class: "form-label" %>
              <%= f.number_field :age, class: "form-control" %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :height, "Height (cm)", class: "form-label" %>
              <%= f.number_field :height, step: 0.1, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :weight, "Weight (kg)", class: "form-label" %>
              <%= f.number_field :weight, step: 0.1, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :positions, class: "form-label" %>
              <div class="position-checkboxes border rounded p-3">
                <% User::VALID_POSITIONS.each do |position| %>
                  <div class="form-check">
                    <%= check_box_tag 'user[positions][]',
                        position,
                        @player.positions&.include?(position),
                        id: "user_positions_#{position.parameterize}",
                        class: "form-check-input"
                    %>
                    <%= label_tag "user_positions_#{position.parameterize}",
                        position,
                        class: "form-check-label"
                    %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-4">
          <%= f.submit "Update Player", class: "btn btn-primary" %>
          <%= link_to "Cancel", players_path, class: "btn btn-secondary ms-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
