<div class="container">
  <div class="card">
    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
      <h2 class="mb-0">Players</h2>
      <div>
        <%= form_tag players_path, method: :get, class: "d-flex gap-2" do %>
          <%= select_tag :team_id,
              options_from_collection_for_select(Team.all, :id, :name, params[:team_id]),
              prompt: "All Teams",
              class: "form-select form-select-sm",
              onchange: 'this.form.submit();'
          %>
          <%= select_tag :position,
              options_for_select(User::VALID_POSITIONS, params[:position]),
              prompt: "All Positions",
              class: "form-select form-select-sm",
              onchange: 'this.form.submit();'
          %>
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <% if @players.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Team</th>
                <th>Positions</th>
                <th>Age</th>
                <th>Physical Stats</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @players.each do |player| %>
                <tr>
                  <td><%= player.name %></td>
                  <td><%= player.team&.name || 'Not assigned' %></td>
                  <td><small><%= player.position_list %></small></td>
                  <td><%= player.age %></td>
                  <td><%= player.physical_stats %></td>
                  <td>
                    <%= link_to player_path(player),
                        class: "btn btn-sm btn-outline-primary",
                        data: {
                          bs_toggle: "tooltip",
                          bs_placement: "top",
                          bs_title: "View Details"
                        } do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_player_path(player),
                        class: "btn btn-sm btn-outline-secondary ms-1",
                        data: {
                          bs_toggle: "tooltip",
                          bs_placement: "top",
                          bs_title: "Edit Player"
                        } do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle me-2"></i>No players found.
        </div>
      <% end %>
    </div>
  </div>
</div>
