<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

<div class="container">
  <div class="mb-3 d-flex justify-content-end align-items-center">
    <%= link_to players_path, class: "btn btn-outline-light" do %>
      <i class="fas fa-arrow-left me-1"></i> Back
    <% end %>
  </div>

  <div class="row g-4">
    <!-- Profile Card -->
    <div class="col-md-4">
      <div class="card main-card p-4 h-100 d-flex justify-content-center align-items-center">
        <img src="<%= asset_path('eu.jpg') %>" alt="<%= @player.name %>" class="profile-img mb-3">
        <div class="h5 text-white mb-1 d-flex justify-content-center align-items-center gap-2">
          <%= @player.name %>

        </div>
        <div class="text-info fw-bold mb-3" style="font-size:1.2em;"><%= @player.total_points %> pts</div>
        <div class="d-flex align-items-center justify-content-between mb-3">
          <span class="me-2"><img src="https://flagcdn.com/24x18/pt.png" alt="England" style="width:24px;height:18px;"></span>
          <span class="me-2" style="color: white;"><%= @player.country %></span>
          <span class="me-2"><img src="<%= asset_path('cdul.jpg') %>" alt="Man United" style="width:35px;height:35px;"></span>
          <span style="color: white;" ><%= @player.team.name %></span>
        </div>
        <div class="row mb-3">
          <div class="col-6">
            <div class="stat-label">Position</div>
            <div class="stat-value"><%= @player.positions.join(', ') %></div>
          </div>
          <div class="col-6">
            <div class="stat-label">Age</div>
            <div class="stat-value"><%= @player.age %></div>
          </div>
          <div class="col-6 mt-2">
            <div class="stat-label">Weight</div>
            <div class="stat-value"><%= @player.weight %> kg</div>
          </div>
          <div class="col-6 mt-2">
            <div class="stat-label">Height</div>
            <div class="stat-value"><%= @player.height %> cm</div>
          </div>
        </div>
        <div class="d-flex gap-2">
          <div class="mt-4">
            <%= link_to edit_player_path(@player),
                class: "btn btn-lg btn-outline-light",
                data: {
                  turbo_frame: "_top",
                  bs_toggle: "tooltip",
                  bs_placement: "top",
                  bs_title: "Edit Player"
                } do %>
              <i class="fas fa-edit"></i> Edit Player
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts and Stats -->
    <div class="col-md-8">
      <div class="row g-4">
        <!-- Performance Chart -->
        <div class="col-12">
          <div class="card chart-card p-4 mb-2">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="h5 text-white mb-0">Performance</div>
              <div class="btn-group btn-group-sm">
                <button class="btn btn-primary active">All</button>
                <button class="btn btn-outline-light">At home</button>
                <button class="btn btn-outline-light">Away</button>
              </div>
            </div>
            <div style="height: 220px;">
              <canvas id="performanceChart"></canvas>
            </div>
          </div>
        </div>
        <!-- Statistics -->
        <div class="col-md-6">
          <div class="card chart-card p-4 h-100">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="h5 text-white mb-0">Minutes</div>
              <span class="text-secondary">per game</span>
            </div>
            <div style="height: 160px;">
              <canvas id="priceChart"></canvas>
            </div>
            <br>
<%= link_to all_stats_player_path(@player),
    class: "btn btn-primary btn-action btn-sm d-block mx-auto",
    style: "width: 50%;",
    data: { turbo: true } do %>
  View all stats
<% end %>          </div>
        </div>
        <div class="col-md-6">
          <div class="card chart-card p-4 h-100">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="h5 text-white mb-0">General Info</div>
              <span class="text-secondary">2024/2025</span>
            </div>

            <ul class="list-unstyled stats-list">
              <li class="d-flex justify-content-between align-items-center mb-2">
                <span><i class="bi bi-clock"></i> Minutes played</span>
                <span class="stat-value">740</span>
              </li>
              <li class="d-flex justify-content-between align-items-center mb-2">
                <span><i class="bi bi-bar-chart"></i> Matches played</span>
                <span class="stat-value">14</span>
              </li>
              <li class="d-flex justify-content-between align-items-center mb-2">
                <span><i class="bi bi-people"></i> Starting lineup</span>
                <span class="stat-value">13</span>
              </li>
              <li class="d-flex justify-content-between align-items-center mb-2">
                <span><i class="bi bi-trophy"></i> Tries</span>
                <span class="stat-value">5</span>
              </li>
              <li class="d-flex justify-content-between align-items-center mb-2">
                <span><i class="bi bi-exclamation-triangle"></i> Yellow / Red cards</span>
                <span class="stat-value">2 / 0</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Wait for both DOM and Chart.js to be ready
document.addEventListener('turbo:load', function() {
  // Add a small delay to ensure Chart.js is fully loaded
  setTimeout(function() {
    if (typeof Chart === 'undefined') {
      console.error('Chart.js is not loaded');
      return;
    }

    // Performance Chart
    const performanceCtx = document.getElementById('performanceChart');
    if (performanceCtx) {
      new Chart(performanceCtx.getContext('2d'), {
        type: 'bar',
        data: {
          labels: ['12 Dec', '17 Dec', '25 Dec', '29 Dec', '4 Jan', '8 Jan', '15 Jan', '29 Jan', '6 Feb', '17 Feb', '24 Feb'],
          datasets: [{
            label: 'Points',
            data: [40, 65, 75, 50, 35, 60, 45, 35, 40, 70, 50],
            backgroundColor: [
              '#0dcaf0', '#0dcaf0', '#20c997', '#0dcaf0', '#0dcaf0',
              '#20c997', '#0dcaf0', '#0dcaf0', '#0dcaf0', '#20c997', '#0dcaf0'
            ],
            borderRadius: 8,
            borderSkipped: false
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false },
            tooltip: {
              callbacks: {
                label: function(context) {
                  let teamIcons = [
                    '‚öΩ', 'üèüÔ∏è', 'üèÜ', '‚öΩ', 'üèüÔ∏è', 'üèÜ', '‚öΩ', 'üèüÔ∏è', 'üèÜ', '‚öΩ', 'üèüÔ∏è'
                  ];
                  return `${teamIcons[context.dataIndex]}  ${context.parsed.y} pts  3:2`;
                }
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: { color: 'rgba(255,255,255,0.08)' },
              ticks: { color: '#b0b3c6' }
            },
            x: {
              grid: { display: false },
              ticks: { color: '#b0b3c6' }
            }
          }
        }
      });
    }

    // Price Chart
    const priceCtx = document.getElementById('priceChart');
    if (priceCtx) {
      new Chart(priceCtx.getContext('2d'), {
        type: 'line',
        data: {
          labels: [<%= raw @player.team.name.to_json %>, 'CDUP', 'AAC', 'GDD', 'SLB', 'TEC'],
          datasets: [{
            label: 'Price',
            data: [60, 55, 80, 60, 40, 50, 70, 80, 70, 47, 64],
            borderColor: '#0dcaf0',
            backgroundColor: 'rgba(13, 202, 240, 0.1)',
            tension: 0.4,
            fill: true,
            pointRadius: 4,
            pointBackgroundColor: '#0dcaf0'
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false },
            tooltip: {
              callbacks: {
                label: function(context) {
                  return ` ${context.parsed.y} mln`;
                }
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: { color: 'rgba(255,255,255,0.08)' },
              ticks: { color: '#b0b3c6' }
            },
            x: {
              grid: { display: false },
              ticks: { color: '#b0b3c6' }
            }
          }
        }
      });
    }
  }, 100);
});
</script>
