<%= turbo_frame_tag "players-table" do %>
  <div class="container">
    <div class="card">
      <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Player Details</h2>
        <%= link_to players_path, class: "btn btn-outline-light" do %>
          <i class="fas fa-arrow-left me-1"></i> Back to Players
        <% end %>
      </div>

      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <h4>Basic Information</h4>
            <dl class="row">
              <dt class="col-sm-4">Name</dt>
              <dd class="col-sm-8"><%= @player.name %></dd>

              <dt class="col-sm-4">Team</dt>
              <dd class="col-sm-8"><%= @player.team&.name || 'Not assigned' %></dd>

              <dt class="col-sm-4">Age</dt>
              <dd class="col-sm-8"><%= @player.age || '-' %></dd>
            </dl>
          </div>

          <div class="col-md-6">
            <h4>Player Details</h4>
            <dl class="row">
              <dt class="col-sm-4">Height</dt>
              <dd class="col-sm-8"><%= @player.height ? "#{@player.height} cm" : '-' %></dd>

              <dt class="col-sm-4">Weight</dt>
              <dd class="col-sm-8"><%= @player.weight ? "#{@player.weight} kg" : '-' %></dd>

              <dt class="col-sm-4">Positions</dt>
              <dd class="col-sm-8">
                <% if @player.positions.present? %>
                  <ul class="list-unstyled mb-0">
                    <% @player.positions.each do |position| %>
                      <li><%= position %></li>
                    <% end %>
                  </ul>
                <% else %>
                  <span class="text-muted">No positions assigned</span>
                <% end %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
