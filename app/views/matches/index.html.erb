<div class="container py-4">
  <div class="card shadow-sm">
    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
      <h2 class="mb-0">Matches</h2>
      <%= link_to new_match_path, class: "btn btn-outline-light" do %>
        <i class="fas fa-plus me-1"></i> New Match
      <% end %>
    </div>

    <div class="card-body">
      <% if @matches.any? %>
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>Date</th>
                <th>Teams</th>
                <th>Result</th>
                <th>Competition</th>
                <th>Season</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @matches.each do |match| %>
                <tr>
                  <td><%= match.date&.strftime("%B %d, %Y") %></td>
                  <td>
                    <div class="d-flex align-items-center gap-2">
                      <span class="<%= match.home_team == current_user.team&.name ? 'fw-bold' : '' %>">
                        <%= match.home_team %>
                      </span>
                      <small class="text-muted">vs</small>
                      <span class="<%= match.away_team == current_user.team&.name ? 'fw-bold' : '' %>">
                        <%= match.away_team %>
                      </span>
                    </div>
                  </td>
                  <td>
                    <% if match.result.present? %>
                      <%
                        home_score, away_score = match.result.split('-').map(&:to_i)
                        user_team = current_user.team&.name

                        badge_class = if (match.home_team == user_team && home_score > away_score) ||
                                       (match.away_team == user_team && away_score > home_score)
                                      'bg-success'  # Win - Green
                                    elsif (match.home_team == user_team && home_score < away_score) ||
                                          (match.away_team == user_team && away_score < home_score)
                                      'bg-danger'   # Loss - Red
                                    else
                                      'bg-warning'  # Draw - Yellow
                                    end
                      %>
                      <span class="badge <%= badge_class %>"><%= match.result %></span>
                    <% else %>
                      <span class="badge bg-secondary">Not Played</span>
                    <% end %>
                  </td>
                  <td><%= match.competition %></td>
                  <td><%= match.season %></td>
                  <td>
                    <div class="d-flex justify-content-end gap-2">
                      <%= link_to match_path(match),
                          class: "btn btn-sm btn-outline-primary",
                          data: {
                            bs_toggle: "tooltip",
                            bs_placement: "top",
                            bs_title: "View Details"
                          } do %>
                        <i class="fas fa-eye"></i>
                      <% end %>

                      <%= link_to edit_match_path(match),
                          class: "btn btn-sm btn-outline-secondary",
                          data: {
                            bs_toggle: "tooltip",
                            bs_placement: "top",
                            bs_title: "Edit Match"
                          } do %>
                        <i class="fas fa-edit"></i>
                      <% end %>

                      <%= button_to match_path(match),
                          method: :delete,
                          class: "btn btn-sm btn-outline-danger",
                          form: {
                            data: {
                              turbo_confirm: "Are you sure you want to delete this match?",
                              bs_toggle: "tooltip",
                              bs_placement: "top",
                              bs_title: "Delete Match"
                            }
                          } do %>
                        <i class="fas fa-trash-alt"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-4">
          <div class="mb-3">
            <i class="fas fa-calendar-alt fa-3x text-muted"></i>
          </div>
          <h4 class="text-muted">No matches found</h4>
          <p class="text-muted">Get started by creating your first match</p>
          <%= link_to new_match_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-1"></i> Create Match
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .matches-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .matches-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
    }

    .match-card {
      background: #1a1a1a;
      border-radius: 8px;
      padding: 15px;
    }

    .match-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 15px;
    }

    .season, .competition {
      font-size: 0.9em;
      color: #888;
    }

    .match-details {
      text-align: center;
      margin-bottom: 15px;
    }

    .teams {
      font-size: 1.2em;
      margin-bottom: 10px;
    }

    .vs {
      margin: 0 10px;
      color: #888;
    }

    .formations {
      font-size: 0.9em;
      color: #888;
    }

    .formation-divider {
      margin: 0 10px;
    }

    .match-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .date {
      color: #888;
    }

    .actions {
      display: flex;
      gap: 10px;
    }

    .btn {
      padding: 5px 10px;
      border-radius: 4px;
      text-decoration: none;
      font-size: 0.9em;
    }

    .btn-primary {
      background: #007bff;
      color: white;
    }

    .btn-info {
      background: #17a2b8;
      color: white;
    }

    .btn-warning {
      background: #ffc107;
      color: black;
    }

    .btn-danger {
      background: #dc3545;
      color: white;
    }
  </style>
<% end %>
