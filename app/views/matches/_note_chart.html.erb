<div class="notes-container">
  <div class="row">
    <!-- Top row with two equal columns -->
    <div class="col-md-6 mb-4">
      <!-- Match Coach Notes -->
      <div class="note-section h-100">
        <h6 class="text-white mb-3">COACH TEAM NOTES</h6>
        <div class="note-card h-100">
          <% if match.coach_notes.present? %>
            <p class="note-text"><%= match.coach_notes %></p>
          <% else %>
            <p class="note-text text-secondary">No match notes from coach</p>
          <% end %>
          <% if current_user&.admin? %>
            <div class="note-actions">
              <%= link_to "Edit Match Notes", edit_match_path(match, anchor: 'coach_notes'),
                  class: "btn btn-sm btn-outline-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6 mb-4">
      <!-- Player-specific Coach Notes -->
      <div class="note-section h-100">
        <h6 class="text-white mb-3">COACH NOTES TO YOU</h6>
        <div class="note-card h-100">
          <% if match.coach_notes.present? %>
            <p class="note-text"><%= match.coach_notes %></p>
          <% else %>
            <p class="note-text text-secondary">No match notes from coach</p>
          <% end %>
          <% if current_user&.admin? %>
            <div class="note-actions">
              <%= link_to "Edit Match Notes", edit_match_path(match, anchor: 'coach_notes'),
                  class: "btn btn-sm btn-outline-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Full width bottom row -->
    <div class="col-md-12">
      <!-- Player Self Notes -->
      <div class="note-section">
        <br>
        <h6 class="text-white mb-3">MY NOTES</h6>
        <div class="note-card h-100">
          <p class="note-text text-secondary">No match notes from you</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.notes-container {
  padding: 1rem;
}

.note-section {
  margin-bottom: 2rem;
}

.note-section h6 {
  font-size: 0.8rem;
  letter-spacing: 1px;
  opacity: 0.8;
}

.note-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8px;
  padding: 1rem;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.note-header {
  margin-bottom: 0.5rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.note-text {
  color: #fff;
  margin-bottom: 1rem;
  white-space: pre-wrap;
  flex-grow: 1;
}

.note-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: auto;
}

@media (max-width: 768px) {
  .note-cards-grid {
    grid-template-columns: 1fr;
  }
}
</style>
