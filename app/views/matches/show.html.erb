<div class="container py-4">
  <div class="card main-card">
    <div class="card-header text-white d-flex justify-content-between align-items-center" style="background-color: #23263a;">
      <h2 class="mb-0">Match Details</h2>
      <%= link_to matches_path, class: "btn btn-outline-light" do %>
        <i class="fas fa-arrow-left me-1"></i> Back
      <% end %>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <h4 class="border-bottom pb-2 mb-3 text-white">Match Information</h4>
          <dl class="row text-white">
            <dt class="col-sm-4">Season</dt>
            <dd class="col-sm-8"><%= @match.season %></dd>

            <dt class="col-sm-4">Competition</dt>
            <dd class="col-sm-8"><%= @match.competition %></dd>

            <dt class="col-sm-4">Date</dt>
            <dd class="col-sm-8"><%= @match.date&.strftime("%B %d, %Y") %></dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8"><%= @match.description.presence || "No description provided" %></dd>
          </dl>
        </div>

        <div class="col-md-6">
          <h4 class="border-bottom pb-2 mb-3 text-white">Teams</h4>
          <div class="card bg-light">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="text-center flex-grow-1">
                  <h5 class="mb-0"><%= @match.home_team.name  %></h5>
                  <small class="text-muted">Home Team</small>
                </div>
                <div class="mx-3">
                  <% if @match.result.present? %>
                    <h4 class="mb-0"><%= @match.result %></h4>
                  <% else %>
                    <% if @match.date < Date.today %>
                      <span class="badge bg-secondary">Analysis Pending</span>
                    <% else %>
                      <span class="badge bg-secondary">Upcoming</span>
                    <% end %>
                  <% end %>
                </div>
                <div class="text-center flex-grow-1">
                  <h5 class="mb-0"><%= @match.away_team.name %></h5>
                  <small class="text-muted">Away Team</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to edit_match_path(@match), class: "btn btn-primary me-2" do %>
          <i class="fas fa-edit me-1"></i> Edit Match
        <% end %>
        <%= button_to match_path(@match),
            method: :delete,
            class: "btn btn-danger",
            form: { data: { turbo_confirm: "Are you sure you want to delete this match?" } } do %>
          <i class="fas fa-trash-alt me-1"></i> Delete Match
        <% end %>
      </div>
    </div>
  </div>

  <div class="card mt-4" style="background-color: #23263a;">
    <div class="card-body">
      <div class="stat-block">
        <br>
        <div class="toggle-buttons">
          <button class="toggle-button active" data-target="general-chart">General</button>
          <button class="toggle-button" data-target="setpiece-chart">%</button>
          <button class="toggle-button" data-target="negative-chart">Negative</button>
        </div>
        <br>
        <div id="general-chart" class="chart-section active">
          <%= render partial: 'stat_graph', locals: { stats: @general_stats } %>
        </div>

        <div id="setpiece-chart" class="chart-section">
          <%= render partial: 'stat_graph', locals: { stats: @setpiece_stats } %>
        </div>

        <div id="negative-chart" class="chart-section">
          <%= render partial: 'stat_graph', locals: { stats: @negative_stats } %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.querySelectorAll('.toggle-button').forEach(button => {
    button.addEventListener('click', () => {
      document.querySelectorAll('.toggle-button').forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      const target = button.dataset.target;
      document.querySelectorAll('.chart-section').forEach(section => section.classList.remove('active'));
      document.getElementById(target).classList.add('active');
    });
  });
</script>

<style>
  .toggle-buttons {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
    gap: 1rem;
  }

  .toggle-button {
    padding: 0.5rem 1rem;
    background-color: #2c2f48;
    color: #fff;
    border: none;
    cursor: pointer;
    border-radius: 4px;
  }

  .toggle-button.active {
    background-color: rgb(222 53 69);
  }

  .chart-section {
    display: none;
  }

  .chart-section.active {
    display: block;
  }
</style>
