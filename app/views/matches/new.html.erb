<div class="container py-5">
  <div class="card main-card mb-4">
    <div class="card-header text-danger d-flex justify-content-between align-items-center" style="background-color: #23263a;">
      <h2 class="mb-0"><%= action_name == "new" ? "New Match" : "Edit Match" %></h2>
      <%= link_to matches_path, class: "btn btn-outline-light" do %>
        <i class="fas fa-arrow-left me-1"></i> Back to Matches
      <% end %>
    </div>
    <%= render 'form', submit_text: (action_name == "new" ? "Create Match" : "Update Match") %>
  </div>
</div>
