  <style>
    .player-badge {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: bold;
    }
    .field {
      background-color: #28a745;
      border: 2px solid #ccc;
      position: relative;
      height: 600px;
    }
    .field-line {
      position: absolute;
      width: 2px;
      height: 100%;
      background-color: white;
    }
    .home-team, .away-team {
      position: absolute;
      top: 0;
      bottom: 0;
      width: 50%;
    }
    .away-team {
      right: 0;
    }
    .sub-list {
      height: 100%;
    }
  </style>


  <div class="container py-5">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
        <h2 class="mb-0">New Match</h2>
        <%= link_to matches_path, class: "btn btn-outline-light" do %>
          <i class="fas fa-arrow-left me-1"></i> Back to Matches
        <% end %>
      </div>

      <%= render 'form', submit_text: 'Create Match' %>
    </div>
  </div>
